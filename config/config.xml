<?xml version="1.0" encoding="UTF-8"?>
<config>
    <paths>
        <plots_dir>plots/</plots_dir>
        <agents_dir>agents/</agents_dir>
        <environments_dir>environments/</environments_dir>
    </paths>
    <simulation>
        <n_steps>2000</n_steps>
        <n_trials>5</n_trials>
        <confidence_levels>
            <level>0.95</level>
        </confidence_levels>
    </simulation>
    <seeds>
        <numpy>1245</numpy>
        <random>1245</random>
    </seeds>
    <environments>
        <n_actions>10</n_actions>
        <bernoulli>
            <probs>
                <prob>0.1</prob>
                <prob>0.2</prob>
                <prob>0.3</prob>
                <prob>0.4</prob>
                <prob>0.5</prob>
                <prob>0.6</prob>
                <prob>0.7</prob>
                <prob>0.8</prob>
                <prob>0.9</prob>
                <prob>1.0</prob>
            </probs>
        </bernoulli>
        <gaussian>
            <means>
                <mean>0.0</mean>
                <mean>0.5</mean>
                <mean>1.0</mean>
                <mean>1.5</mean>
                <mean>2.0</mean>
                <mean>2.5</mean>
                <mean>3.0</mean>
                <mean>3.5</mean>
                <mean>4.0</mean>
                <mean>4.5</mean>
            </means>
            <stds>
                <std>0.5</std>
                <std>0.5</std>
                <std>0.5</std>
                <std>0.5</std>
                <std>0.5</std>
                <std>0.5</std>
                <std>0.5</std>
                <std>0.5</std>
                <std>0.5</std>
                <std>0.5</std>
            </stds>
        </gaussian>
    </environments>
</config> 
